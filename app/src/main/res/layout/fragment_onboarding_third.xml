<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="1"
    tools:context=".ui.onboarding.OnboardingThirdFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_onboarding_3"
            tools:ignore="ContentDescription" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:lottie_rawRes="@raw/bottom_anim"
            android:layout_width="match_parent"
            android:layout_marginBottom="-10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_height="150dp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/have_a_breakup"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/we_have_made_the_correction_for_you_ndon_t_worry_nmaybe_someone_is_waiting_for_you"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>